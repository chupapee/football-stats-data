{
	"ts-node": { "files": true },
	"compilerOptions": {
		"types": ["node", "jest"],
		"target": "ES2015",
		"module": "commonjs",
		"lib": ["ES2015", "DOM"],
		"outDir": "./dist/",
		"declaration": true,

		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictPropertyInitialization": false
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
